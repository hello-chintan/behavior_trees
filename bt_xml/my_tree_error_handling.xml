<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <TaskStart name="task_start"/>
      <Fallback>
        <Sequence>
          <TaskA name="task_A"
                 msec="4000"/>
          <ParallelAll max_failures="1">
            <TaskB name="task_B"
                   msec="2000"/>
            <TaskC name="task_C"
                   msec="4000"/>
          </ParallelAll>
          <TaskD name="task_D"
                 msec="4000"/>
        </Sequence>
        <ForceFailure>
          <TaskError/>
        </ForceFailure>
      </Fallback>
      <TaskE name="task_E"
             msec="8000"/>
      <TaskEnd name="task_end"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="TaskA">
      <input_port name="msec"
                  type="int"/>
    </Action>
    <Action ID="TaskB">
      <input_port name="msec"
                  type="int"/>
    </Action>
    <Action ID="TaskC">
      <input_port name="msec"
                  type="int"/>
    </Action>
    <Action ID="TaskD">
      <input_port name="msec"
                  type="int"/>
    </Action>
    <Action ID="TaskE">
      <input_port name="msec"
                  type="int"/>
    </Action>
    <Action ID="TaskEnd"/>
    <Action ID="TaskError"/>
    <Action ID="TaskStart"/>
  </TreeNodesModel>

</root>
